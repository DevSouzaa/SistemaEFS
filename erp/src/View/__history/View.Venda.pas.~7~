{$R *.dfm}

procedure TViewVenda.FormCreate(Sender: TObject);
begin
//  ConfiguraGrid;
  ViewVenda.caption := TipoMovimento;
  ConfiguraJvStringGrid;
end;

procedure TViewVenda.ConfiguraJvStringGrid;
begin
  with JvStringGrid1 do
  begin
    ColCount := 5;  // número de colunas
    RowCount := 2;  // número inicial de linhas
    FixedRows := 1; // cabeçalho fixo
    Options := [goFixedVertLine, goFixedHorzLine, goVertLine, goHorzLine, goEditing, goRowSelect];
    Cells[0, 0] := 'Produto';
    Cells[1, 0] := 'Quantidade';
    Cells[2, 0] := 'Preço Unitário';
    Cells[3, 0] := 'Desconto (%)';
    Cells[4, 0] := 'Subtotal';
    // Exemplo de preenchimento de dados
    Cells[0, 1] := 'Caneta Azul';
    Cells[1, 1] := '10';
    Cells[2, 1] := 'R$ 1,50';
    Cells[3, 1] := '5';
    Cells[4, 1] := 'R$ 14,25';
    // Ajustes visuais podem ser feitos conforme necessário
  end;
end;
end.
