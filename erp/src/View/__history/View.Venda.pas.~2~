{$R *.dfm}

procedure TViewVenda.ConfiguraGrid;
begin
  with AdvStringGrid1 do
  begin
    // Configurações iniciais
    ColCount := 5; // Define o número de colunas
    RowCount := 2; // Define o número de linhas inicial
    FixedRows := 1; // Define a primeira linha como fixa para cabeçalho
    Options := Options + [goRowSelect]; // Permite a seleção por linha

    // Cabeçalhos das colunas
    Cells[0, 0] := 'Produto';
    Cells[1, 0] := 'Quantidade';
    Cells[2, 0] := 'Preço Unitário';
    Cells[3, 0] := 'Desconto (%)';
    Cells[4, 0] := 'Subtotal';

    // Exemplo de preenchimento de dados
    Cells[0, 1] := 'Caneta Azul';
    Cells[1, 1] := '10';
    Cells[2, 1] := 'R$ 1,50';
    Cells[3, 1] := '5';
    Cells[4, 1] := 'R$ 14,25';

    // Melhorando a aparência
    Font.Name := 'Verdana';
    Font.Size := 10;
    AlternatingRowColors := True;
    GridLineColor := clSilver;
    FixedColor := clNavy;
    FixedFont.Color := clWhite;
    FixedFont.Style := [fsBold];

    // Auto-ajuste das colunas ao conteúdo
    AutoSizeColumns(True);
  end;
end;

procedure TViewVenda.FormCreate(Sender: TObject);
begin
  ConfiguraGrid;
end;
end.
