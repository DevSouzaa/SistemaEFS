unit EmpresaController;

interface

uses
  EmpresaService, Empresa.model, Generics.Collections;

type
  TEmpresaController = class
  private
    FEmpresaService: TEmpresaService;
  public
    constructor Create;
    destructor Destroy; override;
    function CarregarEmpresas: TList<TEmpresa>;
    function CarregarEmpresaPorId(Id: Integer): TEmpresa;
  end;

implementation

{ TEmpresaController }

constructor TEmpresaController.Create;
begin
  FEmpresaService := TEmpresaService.Create;
end;

destructor TEmpresaController.Destroy;
begin
  FEmpresaService.Free;
  inherited;
end;

function TEmpresaController.CarregarEmpresas: TList<TEmpresa>;
begin
  Result := FEmpresaService.CarregarEmpresas;
end;

function TEmpresaController.CarregarEmpresaPorId(Id: Integer): TEmpresa;
begin
  Result := FEmpresaService.CarregarEmpresaPorId(Id);
end;

end.

